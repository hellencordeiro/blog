<%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <div class="">
        <div class="m-8">   
            <p>
                <%= form.label :commenter %><br>
                <%= form.text_field :body %>
            </p>
            <p>
                <%= form.label :body %><br>
                <%= form.text_area :body %>
            </p>
        </div>
        <div class="">
            <p class="m-8">
                <%= form.label :status %><br>
                <%= form.select :status, ['public', 'private', 'archived'], selected:
            'public' %>
            </p>
            <p>
                <%= form.submit %>
            </p>
        </div>
    </div>
<% end %>
